pipeline {
    agent any
    
    environment {
        REGISTRY_URL = 'localhost:5000'
        BACKEND_IMAGE = "${REGISTRY_URL}/demo-backend"
        FRONTEND_IMAGE = "${REGISTRY_URL}/demo-frontend"
        IMAGE_TAG = "${BUILD_NUMBER}"
        DOCKER_BUILDKIT = '1'
    }
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ æ£€å‡ºä»£ç ...'
                checkout scm
                sh 'git rev-parse --short HEAD > .git/commit-id'
                script {
                    env.GIT_COMMIT_SHORT = readFile('.git/commit-id').trim()
                }
            }
        }
        
        stage('Test') {
            parallel {
                stage('Test Backend') {
                    steps {
                        echo 'ğŸ§ª æµ‹è¯•åç«¯ä»£ç ...'
                        dir('backend') {
                            sh '''
                                python3 -m py_compile app.py
                                echo "âœ… åç«¯ä»£ç æ£€æŸ¥é€šè¿‡"
                            '''
                        }
                    }
                }
                
                stage('Test Frontend') {
                    steps {
                        echo 'ğŸ§ª æµ‹è¯•å‰ç«¯ä»£ç ...'
                        dir('frontend') {
                            sh '''
                                ls -la
                                echo "âœ… å‰ç«¯æ–‡ä»¶æ£€æŸ¥é€šè¿‡"
                            '''
                        }
                    }
                }
            }
        }
        
        stage('Build') {
            parallel {
                stage('Build Backend') {
                    steps {
                        echo 'ğŸ”¨ æ„å»ºåç«¯é•œåƒ...'
                        dir('backend') {
                            sh """
                                docker build -t ${BACKEND_IMAGE}:${IMAGE_TAG} .
                                docker tag ${BACKEND_IMAGE}:${IMAGE_TAG} ${BACKEND_IMAGE}:latest
                                echo "âœ… åç«¯é•œåƒæ„å»ºæˆåŠŸ"
                            """
                        }
                    }
                }
                
                stage('Build Frontend') {
                    steps {
                        echo 'ğŸ”¨ æ„å»ºå‰ç«¯é•œåƒ...'
                        dir('frontend') {
                            sh """
                                docker build -t ${FRONTEND_IMAGE}:${IMAGE_TAG} .
                                docker tag ${FRONTEND_IMAGE}:${IMAGE_TAG} ${FRONTEND_IMAGE}:latest
                                echo "âœ… å‰ç«¯é•œåƒæ„å»ºæˆåŠŸ"
                            """
                        }
                    }
                }
            }
        }
        
        stage('Push to Registry') {
            when {
                branch 'main'
            }
            steps {
                echo 'ğŸ“¤ æ¨é€é•œåƒåˆ°Registry...'
                sh """
                    docker push ${BACKEND_IMAGE}:${IMAGE_TAG}
                    docker push ${BACKEND_IMAGE}:latest
                    docker push ${FRONTEND_IMAGE}:${IMAGE_TAG}
                    docker push ${FRONTEND_IMAGE}:latest
                    echo "âœ… é•œåƒæ¨é€æˆåŠŸ"
                """
            }
        }
        
        stage('Deploy to Staging') {
            when {
                branch 'main'
            }
            steps {
                echo 'ğŸš€ éƒ¨ç½²åˆ°æµ‹è¯•ç¯å¢ƒ...'
                sh """
                    echo "éƒ¨ç½²é•œåƒç‰ˆæœ¬: ${IMAGE_TAG}"
                    echo "Gitæäº¤: ${GIT_COMMIT_SHORT}"
                    echo "âœ… éƒ¨ç½²åˆ°æµ‹è¯•ç¯å¢ƒæˆåŠŸ"
                """
            }
        }
        
        stage('Deploy to Production') {
            when {
                branch 'main'
            }
            steps {
                input message: 'æ˜¯å¦éƒ¨ç½²åˆ°ç”Ÿäº§ç¯å¢ƒ?', ok: 'ç¡®è®¤éƒ¨ç½²'
                echo 'ğŸš€ éƒ¨ç½²åˆ°ç”Ÿäº§ç¯å¢ƒ...'
                sh """
                    echo "éƒ¨ç½²é•œåƒç‰ˆæœ¬: ${IMAGE_TAG}"
                    echo "Gitæäº¤: ${GIT_COMMIT_SHORT}"
                    echo "âœ… éƒ¨ç½²åˆ°ç”Ÿäº§ç¯å¢ƒæˆåŠŸ"
                """
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Pipelineæ‰§è¡ŒæˆåŠŸï¼'
            // å¯ä»¥æ·»åŠ é€šçŸ¥ï¼Œå¦‚å‘é€é‚®ä»¶æˆ–Slackæ¶ˆæ¯
        }
        failure {
            echo 'âŒ Pipelineæ‰§è¡Œå¤±è´¥ï¼'
            // å¯ä»¥æ·»åŠ å¤±è´¥é€šçŸ¥
        }
        always {
            echo 'ğŸ§¹ æ¸…ç†å·¥ä½œç©ºé—´...'
            cleanWs()
        }
    }
}

