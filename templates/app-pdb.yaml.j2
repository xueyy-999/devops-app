apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: {{ app_name }}-pdb
  namespace: {{ app_namespace }}
  labels:
    app: {{ app_name }}
spec:
  minAvailable: 1
  selector:
    matchLabels:
      app: {{ app_name }}
---
apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: {{ app_name }}-pdb-max
  namespace: {{ app_namespace }}
  labels:
    app: {{ app_name }}
spec:
  maxUnavailable: 1
  selector:
    matchLabels:
      app: {{ app_name }}
