apiVersion: v1
kind: Secret
metadata:
  name: {{ app_name }}-secret
  namespace: {{ app_namespace }}
type: Opaque
data:
  # 应用密钥
  app-key: {{ vault_app_key | default('your-app-key') | b64encode }}
  # 数据库密码
  db-password: {{ vault_db_password | default('your-db-password') | b64encode }}
  # API密钥
  api-key: {{ vault_api_key | default('your-api-key') | b64encode }}
