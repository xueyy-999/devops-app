apiVersion: apps/v1
kind: Deployment
metadata:
  name: ai-scaler
  namespace: {{ ai_namespace }}
  labels:
    app: ai-scaler
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ai-scaler
  template:
    metadata:
      labels:
        app: ai-scaler
    spec:
      containers:
      - name: ai-scaler
        image: {{ ai_image }}
        command: ["python3"]
        args: ["/app/ai_scaler.py"]
        env:
        - name: PROMETHEUS_URL
          value: "http://prometheus:{{ prometheus_port }}"
        - name: KUBECONFIG
          value: "/etc/kubernetes/admin.conf"
        - name: LOG_LEVEL
          value: "INFO"
        volumeMounts:
        - name: ai-scaler-config
          mountPath: /app
        - name: kubeconfig
          mountPath: /etc/kubernetes
        resources:
          requests:
            memory: "512Mi"
            cpu: "500m"
          limits:
            memory: "1Gi"
            cpu: "1000m"
        livenessProbe:
          exec:
            command:
            - python3
            - -c
            - "import requests; requests.get('http://localhost:8080/health')"
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          exec:
            command:
            - python3
            - -c
            - "import requests; requests.get('http://localhost:8080/ready')"
          initialDelaySeconds: 5
          periodSeconds: 5
      volumes:
      - name: ai-scaler-config
        configMap:
          name: ai-scaler-config
      - name: kubeconfig
        secret:
          secretName: cicd-secrets
          items:
          - key: kubeconfig
            path: admin.conf
